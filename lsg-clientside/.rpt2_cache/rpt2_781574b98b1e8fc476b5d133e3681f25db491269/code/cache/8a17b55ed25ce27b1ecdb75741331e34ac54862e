{"code":"import * as alt from 'alt';\r\nimport * as game from 'natives';\r\nimport { ServerEvent } from 'client/modules/Constant/ServerEvent';\r\nexport default async () => {\r\n    let blips = new Map();\r\n    let totalBlips = 0;\r\n    alt.onServer(ServerEvent.CREATE_LOCAL_BLIP, async (posX, posY, posZ, sprite, color, scale, name, shortRange, uniqueID) => {\r\n        const blip = game.addBlipForCoord(posX, posY, posZ);\r\n        game.setBlipSprite(blip, sprite);\r\n        game.setBlipColour(blip, color);\r\n        game.setBlipScale(blip, scale);\r\n        game.setBlipAsShortRange(blip, shortRange);\r\n        game.beginTextCommandSetBlipName('STRING');\r\n        game.addTextComponentSubstringPlayerName(name);\r\n        game.endTextCommandSetBlipName(blip);\r\n        if (uniqueID === undefined || uniqueID === null) {\r\n            totalBlips += 1;\r\n            uniqueID = `${totalBlips}`;\r\n        }\r\n        if (blips[uniqueID] !== undefined) {\r\n            game.removeBlip(blips[uniqueID]);\r\n        }\r\n        blips[uniqueID] = blip;\r\n    });\r\n    alt.onServer(ServerEvent.DELETE_LOCAL_BLIP, async (uniqueID) => {\r\n        if (blips[uniqueID] !== undefined) {\r\n            alt.log(blips);\r\n            game.removeBlip(blips[uniqueID]);\r\n            blips.delete(uniqueID);\r\n            alt.log(blips);\r\n        }\r\n    });\r\n};\r\n","references":["B:/Projekty/LSGamble-Clientside/lsg-clientside/modules/Constant/ServerEvent.ts"]}
